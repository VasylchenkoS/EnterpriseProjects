<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

    <bean class="com.vasylchenko.java.spring.mvc.service.EmployeeService" id="employeeService"/>
    <bean class="com.vasylchenko.java.spring.mvc.dao.hibernate.HEmployeeDAO" id="employeeDAO"/>

    <bean class="com.vasylchenko.java.spring.mvc.service.MenuService" id="menuService"/>
    <bean class="com.vasylchenko.java.spring.mvc.dao.hibernate.HMenuDAO" id="menuDAO"/>

    <bean class="com.vasylchenko.java.spring.mvc.service.DishService" id="dishService"/>
    <bean class="com.vasylchenko.java.spring.mvc.dao.hibernate.HDishDAO" id="dishDAO"/>
</beans>